#!/usr/bin/env bash

# Puppet repo
repository=~/git/work/workstation/

if [ $EUID != 0 ]; then
  sudo "$0" "$@"
  exit $?
fi

echo $1

if [ "$1" == "php" ]; then
  puppet apply --test --hiera_config ${repository}hiera-php.yaml --modulepath=${repository}modules ${repository}manifests/site.pp
else
  puppet apply --test --hiera_config ${repository}hiera.yaml --modulepath=${repository}modules ${repository}manifests/site.pp
fi
